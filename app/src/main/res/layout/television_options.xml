<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue_gradient">

    <ImageButton
        android:id="@+id/television_home"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:src="@drawable/home_white_24dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:contentDescription="Home button"/>

    <TextView
        android:layout_width="242dp"
        android:layout_height="96dp"
        android:text="Select genre of channels where you want to display"
        android:layout_marginStart="25dp"
        android:textSize="25dp"
        android:layout_marginTop="74dp"
        android:textAppearance="@style/where_would"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/EntertainmentCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/checkBox"
                android:text="Entertainment"
                android:layout_marginTop="20dp"/>

            <CheckBox
                android:id="@+id/MoviesCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/checkBox"
                android:text="Movies"
                android:layout_marginTop="20dp"/>

            <CheckBox
                android:id="@+id/MusicCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/checkBox"
                android:text="Music"
                android:layout_marginTop="20dp"/>

            <CheckBox
                android:id="@+id/KidsCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/checkBox"
                android:text="Kids"
                android:layout_marginTop="20dp"/>

            <CheckBox
                android:id="@+id/InformationCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/checkBox"
                android:text="Information &amp; Lifestyle"
                android:layout_marginTop="20dp"/>

            <CheckBox
                android:id="@+id/NewsCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/checkBox"
                android:text="News"
                android:layout_marginTop="20dp"/>

            <CheckBox
                android:id="@+id/BusinessCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/checkBox"
                android:text="Business"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </ScrollView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/videoGenreProceed"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72dp"
        android:text="Proceed"
        style="@style/button"/>

</LinearLayout>